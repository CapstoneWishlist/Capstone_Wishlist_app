@model IEnumerable<Capstone_Wishlist_app.Models.WishlistItemViewModel>
@using Capstone_Wishlist_app.Models

<table class="table">
    <tr>
        <th>Image</th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ListPrice)
        </th>
        <th>Age Range</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td><img src=@item.ImageUrl /></td>
        <td>
            <a href=@item.ListingUrl>@item.Title</a>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ListPrice)
        </td>
        <td>@AgeRange.FormatAgeRange(item.MinAgeMonths, item.MaxAgeMonths)</td>
        <td>
            @Html.ActionLink("Remove", "RemoveItem", new { id = item.WishlistId, itemId = item.Id }, new { @class = "btn btn-default" })
        </td>
    </tr>
}

</table>
