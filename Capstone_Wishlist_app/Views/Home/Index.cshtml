@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <div class="container">

        <h1>Santa's Wishlist</h1>
        <div class="col-md-8">
            <p class="lead">Make A Difference Today.</p>
            @*----------------------Url.Action("Register", "Account")---------------------------------*@
            @if (Request.IsAuthenticated)
            {
                <p><a href="" class="btn btn-primary btn-lg">Give a Gift &raquo;</a></p>
            }
            else
            {
                <p><a href="@Url.Action("Register", "Account")" class="btn btn-primary btn-lg">Register as a Donor &raquo;</a></p>
            }
        </div>
        <div class="col-md-4"><img src="~/Content/images/santa_gift.jpg" height="266" width="400" /></div>
    </div>

</div>

<div class="row">
    @if ((!(this.User.IsInRole("Admin"))) && (!(this.User.IsInRole("Moderator"))))
    {
        <div class="col-md-3, col-lg-4">
            <h2>The Vision</h2>
            <p>
                The end of year holiday season is historically a difficult time for impoverished families that want to provide happy memories for their children.
                This system is designed to help those children by facilitating gift-giving by charitable donors to children in need.
            </p>
            @*<p><a class="btn btn-default" href="http://go.microsoft.com/fwlink/?LinkId=301865">Learn more &raquo;</a></p>*@
        </div>
        <div class="col-md-6, col-lg-8">
