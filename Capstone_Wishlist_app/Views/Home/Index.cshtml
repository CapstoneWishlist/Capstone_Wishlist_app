        </div>

    }
    else if (this.User.IsInRole("Moderator"))
    {
        <div class="col-md-3, col-lg-4">
            <h2>Add Wishlists</h2>
            <p>
                To create new profiles and wishlists
            </p>
            @*-------------------------need to add link to wishlist form---------------------------*@
            <p><a class="btn btn-default" href="">Add Wishlist &raquo;</a></p>
        </div>

    <div class="col-md-3, col-lg-4">
